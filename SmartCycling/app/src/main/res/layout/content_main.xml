<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bike.smartcycling.smartcycling.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="2"
        app:rowCount='3'
        app:orientation="horizontal">
        <Button
            android:id="@+id/btn_Search"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:text="Search Route"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            android:background="@color/button_1"/>

        <Button
            android:id="@+id/btn_Nearby"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:text="Nearby Facility"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            android:background="@color/button_2"/>

        <Button
            android:id="@+id/btn_List"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:text="Your Activities"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            android:background="@color/button_3"/>


        <Button
            android:id="@+id/btn_Contest"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:text="Contest Record"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            android:background="@color/button_4"/>

        <Button
            android:id="@+id/btn_Go"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:text="Go Cycling"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_columnSpan="2"
            app:layout_row="2"
            android:background="@color/button_5"/>
    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>
